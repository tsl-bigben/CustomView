<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/custom_tab_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/birthday_equity_selected" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/custom_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:gravity="center"
            android:text="标题"
            android:textColor="@color/golden_black_selector"
            android:textSize="15sp" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_tip_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/custom_tab_layout"
        android:layout_marginTop="-10dp"
        android:layout_toEndOf="@+id/custom_tab_layout"
        android:gravity="center"
        android:padding="2dp"
        android:text="0"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:visibility="visible" />
</RelativeLayout>
