<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.dbz.view.indicator.SmartTabLayout
        android:id="@+id/smart_layout"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:background="#FFFFFF"
        android:paddingBottom="11dp"
        app:stl_clickable="true"
        app:stl_customNumTextViewId="@id/tv_tip_num"
        app:stl_customTabTextLayoutId="@layout/custom_tab"
        app:stl_customTabTextViewId="@id/custom_text"
        app:stl_defaultTabTextColor="#FF959595"
        app:stl_defaultTabTextHorizontalPadding="2dp"
        app:stl_defaultTabTextMinWidth="0dp"
        app:stl_defaultTabTextSize="15sp"
        app:stl_distributeEvenly="true"
        app:stl_dividerColor="#00000000"
        app:stl_dividerThickness="1dp"
        app:stl_drawDecorationAfterTab="false"
        app:stl_indicatorAlwaysInCenter="false"
        app:stl_indicatorColor="#FFE4B466"
        app:stl_indicatorCornerRadius="2dp"
        app:stl_indicatorGravity="bottom"
        app:stl_indicatorInFront="false"
        app:stl_indicatorInterpolation="linear"
        app:stl_indicatorThickness="10dp"
        app:stl_indicatorWidth="14dp"
        app:stl_indicatorWithoutPadding="false"
        app:stl_showNum="false"
        app:stl_triangle="true"
        app:stl_titleOffset="24dp"
        app:stl_underlineColor="#00000000"
        app:stl_underlineThickness="6dp" />


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FF858585" />
</LinearLayout>